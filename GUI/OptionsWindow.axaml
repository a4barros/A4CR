<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="450"
        x:Class="GUI.OptionsWindow"
        Width="600"
        Height="450"
        Title="OptionsWindow"
        WindowStartupLocation="CenterOwner">
  <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
      <Label>Key Type</Label>
	  <RadioButton x:Name="HashTypeArgon2id" GroupName="HashType" IsChecked="True">Argon2id</RadioButton>
      <RadioButton x:Name="HashTypePBKDF2" GroupName="HashType">PBKDF2</RadioButton>
      <Label Margin="0 20 0 0">Key Strength</Label>
      <RadioButton x:Name="KeyStrengthLow" GroupName="KeyStrength">Low</RadioButton>
      <RadioButton x:Name="KeyStrengthMedium" GroupName="KeyStrength">Medium</RadioButton>
      <RadioButton x:Name="KeyStrengthHigh" GroupName="KeyStrength" IsChecked="True">High</RadioButton>
      <RadioButton x:Name="KeyStrengthUltra" GroupName="KeyStrength">Ultra</RadioButton>
      <Button Margin="0 20" Click="OKButton_Click">OK</Button>
  </StackPanel>
</Window>
